.page-header
  %h1
    = @product.description
    %small= @product.stock_code

  %p.lead
    Every time you ever bought
    = @product.description.downcase
    at the Coop

  %p
    You buy this roughly every
    = rough_period_of_time_in_words(@product.average_time_between_purchases(current_user.account))

%table.table
  %thead
    %tr
      %th Date
      %th Quantity
      %th Price per unit
      %th Total
  %tbody
    - @product.line_items(current_user.account).order("receipts.date desc").each do |line_item|
      %tr
        %td
          = time_ago_in_words(line_item.receipt.date)
          ago
          (#{line_item.receipt.date.to_s(:long)})
        %td= line_item.quantity
        %td= number_to_currency(line_item.total_inc_gst / line_item.quantity)
        %td= number_to_currency(line_item.total_inc_gst)
    %tr
      %td
      %td
        %strong= @product.line_items(current_user.account).sum(:quantity)
      %td
      %td
        %strong= number_to_currency(@product.total_inc_gst(current_user.account))
